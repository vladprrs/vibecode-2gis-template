{
  "name": "Advice Grid",
  "description": "Советы к месту content grid with cover cards and meta items",
  "version": "1.0.0",
  "components": [
    {
      "name": "AdviceGrid",
      "description": "Main grid container with left and right columns",
      "props": {
        "container": "HTMLElement",
        "onItemClick": "function"
      }
    },
    {
      "name": "LargeCoverCard",
      "description": "Big cover card spanning 2 rows with image and overlay",
      "props": {
        "title": "string",
        "subtitle": "string",
        "imageUrl": "string"
      }
    },
    {
      "name": "SmallCoverCard", 
      "description": "Small cover card with image and overlay",
      "props": {
        "title": "string",
        "subtitle": "string",
        "imageUrl": "string"
      }
    },
    {
      "name": "MetaItem",
      "description": "Meta item card with title, subtitle and icon",
      "props": {
        "title": "string",
        "subtitle": "string",
        "icon": "string"
      }
    },
    {
      "name": "MetaItemAd",
      "description": "Advertisement meta item with special styling",
      "props": {
        "title": "string",
        "subtitle": "string",
        "adLabel": "string"
      }
    },
    {
      "name": "RDCard",
      "description": "Restaurant/Delivery card with gallery and details",
      "props": {
        "title": "string",
        "subtitle": "string",
        "rating": "number",
        "distance": "string",
        "address": "string",
        "photos": "string[]"
      }
    }
  ],
  "styles": {
    "grid": {
      "display": "flex",
      "alignItems": "flex-start", 
      "gap": "12px",
      "alignSelf": "stretch"
    },
    "leftColumn": {
      "display": "flex",
      "flexDirection": "column",
      "alignItems": "flex-start",
      "gap": "12px",
      "flex": "1 0 0"
    },
    "rightColumn": {
      "display": "flex", 
      "flexDirection": "column",
      "alignItems": "flex-start",
      "gap": "12px",
      "flex": "1 0 0"
    },
    "largeCoverCard": {
      "width": "166px",
      "height": "244px",
      "borderRadius": "12px",
      "border": "0.5px solid rgba(137, 137, 137, 0.30)",
      "position": "relative",
      "overflow": "hidden"
    },
    "smallCoverCard": {
      "width": "166px", 
      "height": "116px",
      "borderRadius": "12px",
      "border": "0.5px solid rgba(137, 137, 137, 0.30)",
      "background": "#FFF",
      "position": "relative",
      "overflow": "hidden"
    },
    "metaItem": {
      "display": "flex",
      "height": "116px",
      "justifyContent": "center",
      "alignItems": "center",
      "alignSelf": "stretch",
      "borderRadius": "12px",
      "background": "#FFF",
      "position": "relative"
    },
    "metaItemAd": {
      "height": "116px",
      "alignSelf": "stretch", 
      "borderRadius": "12px",
      "border": "1px solid rgba(20, 20, 20, 0.06)",
      "background": "#FFF",
      "position": "relative"
    },
    "rdCard": {
      "display": "flex",
      "width": "166px",
      "height": "244px", 
      "paddingTop": "8px",
      "flexDirection": "column",
      "alignItems": "flex-start",
      "borderRadius": "12px",
      "background": "#FFF",
      "position": "relative"
    }
  },
  "spacing": {
    "gridGap": "12px",
    "cardPadding": "16px",
    "textPadding": "10px 0 2px 0",
    "subtitlePadding": "1px 0"
  },
  "colors": {
    "primary": "#141414",
    "secondary": "#898989", 
    "accent": "#1BA136",
    "surface": "#FFF",
    "overlay": "rgba(0, 0, 0, 0.60)",
    "border": "rgba(137, 137, 137, 0.30)",
    "adBackground": "#EB6100"
  },
  "typography": {
    "title": {
      "fontFamily": "SB Sans Text, -apple-system, Roboto, Helvetica, sans-serif",
      "fontWeight": "400",
      "fontSize": "16px",
      "lineHeight": "20px",
      "letterSpacing": "-0.24px"
    },
    "subtitle": {
      "fontFamily": "SB Sans Text, -apple-system, Roboto, Helvetica, sans-serif", 
      "fontWeight": "400",
      "fontSize": "13px",
      "lineHeight": "16px",
      "letterSpacing": "-0.234px"
    }
  }
} 